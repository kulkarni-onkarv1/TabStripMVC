        <script type="text/javascript">  
            window.onload = function () {  
                alert("@TempData["InvalidLoginCredentialsErrorMessage"]");  
            };  
        </script> 
	}

@if (TempData["InvalidCredentialsEntryErrorMessage"]!= null)  
    {  
        <script type="text/javascript">  
            window.onload = function () 
			{  
                alert("@TempData["InvalidCredentialsEntryErrorMessage"]");  
            };  
        </script> 
	}

@if (TempData["RegisterResponseMessage"]!= null)  
    {  
        <script type="text/javascript">  
            window.onload = function () 
			{  
                alert("@TempData["RegisterResponseMessage"]");  
            };  
        </script> 
	}

	