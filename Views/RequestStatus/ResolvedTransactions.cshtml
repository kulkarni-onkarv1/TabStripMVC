@model IEnumerable<TabStripDemo.Models.CandidateTransaction>

@{
    ViewData["Title"] = "Rejections";    
}
<div class="container">
    @if (Model.FirstOrDefault().ApprovalStatus == 1)
    {
        <br />
         <h4 style="color:indigo;">Approved Requests</h4>
         <br />
    }
    else
    {
        <br />
         <h4 style="color:indigo;">Rejected Requests</h4>
         <br />
    }
   
</div>
<div class="container">
     <div id="navigationMenu" class="container">  	
						<br>  						 
						@{
							Html.RenderPartial("_AdminNavigationBar");
						}
	</div>
</div>

<table class="table  table-striped table-dark">
    <thead>
        <tr>
            <th>
               Reciepant's Bank'
            </th>
            <th>
               Transaction Type
            </th>
            <th>
                Transaction Date
            </th>
            <th>
                UTR Number
            </th>
            <th>
                Request Amount
            </th>
            <th>
                Remark
            </th>
            <th>
                Request Date
            </th>
            <th>
                Response Date
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReciepientBank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApproverRemark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponseDateTime)
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.Urn">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Urn">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Urn">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
