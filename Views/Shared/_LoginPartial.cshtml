@model UserLogin  

<script src='@Url.Content("~/Scripts/jquery-1.10.2.js")'></script>
<script src='@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")'></script>
<script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="row">
    <div class="col-md-4">
        
        <form  method="post" asp-action="Login" data-ajax="true" data-ajax-method="post" data-ajax-complete="completed">
             @*<h4>@ViewBag.NewMessage</h4>
            <h4>@ViewData["Message"]</h4>*@
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
               @* <label asp-for="MailID" class="control-label"></label>*@
                <p style="color:rgb(0, 0, 128);">Enter Your Mail ID</p>
                <input asp-for="MailID" class="form-control" />
                <span asp-validation-for="MailID" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <p style="color:rgb(0, 0, 128);">Enter your password</p>
                @*<label asp-for="Password" class="control-label"></label>*@
                <input asp-for="Password"  type="password" class="form-control" />
                @*@Html.EditorFor(model => model.Password, new { @class = "form-control" } )*@
               @* <input type="checkbox" id="showPass"/>*@
                <span asp-validation-for="Password" class="text-danger"></span>                
            </div>            
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>



