@model TabStripDemo.Models.CandidateDetails

@{
    ViewData["Title"] = "Index";
   
}


@if(Model.RoleID!=1)
{
    <div class="Button_center">
    <div class="col-md-4 ">
        <br />
        <a asp-action="Create" class="btn btn-success"  asp-controller="CandidateParticipation" asp-route-id="@Model.UserId">Create Payment Request</a> 
        <br /><br />
    </div>
</div>  
}
@if (Model.RoleID != 1)
{
    <div class="container">
     <div id="navigationMenu" class="container">  	
						<br>  						 
						@{
							Html.RenderPartial("_CandidateNavigationBar",Model);
						}
	</div>
</div>
}
else
{
    <div class="container">
     <div id="navigationMenu" class="container">  	
						<br>  						 
						@{
							Html.RenderPartial("_AdminNavigationBar");
						}
	</div>
</div>
}

@if (Model.candidateTransactions.Count() == 0)
{
    if (Model.RoleID != 1)
    {
        <h6 style="color:indigo;">You have not submitted any payment request</h6>
    }
    else
    {
         <h6 style="color:indigo;">No any payment request has been submitted yet</h6>
    }

}
else
{
    <table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
               Reciepant Bank
            </th>
            <th>
                Transaction Type
            </th>
            <th>
                UTR Number
            </th>
            <th>
               Transaction Amount
            </th>
            <th>
               Transaction Date
            </th>         
           @* <th>
                @Html.DisplayNameFor(model => model.TransactionRecieptPath)
            </th>*@
            <th>
               Approval Status
            </th>
             <th>
               Remark
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.candidateTransactions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReciepientBank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            @*<td>                   
                @Html.DisplayFor(modelItem => item.TransactionRecieptPath)
            </td>*@
            <td>
                @{
                    if (item.ApprovalStatus == 0)
                    {
                        @*<button type="submit" id="approve_button" class="btn btn-danger">Pending
                    </button>*@
                    <p class="button3">Pending</p>
                    }
                    else if(item.ApprovalStatus==1)
                    {
                      <p class="button2">Approved</p>
                    }
                    else
                     {
                       <p class="button1">Rejected</p>         
                     }
                }             
               @* @Html.DisplayFor(modelItem => item.ApprovalStatus)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.ApproverRemark);
            </td>
                    @if (Model.RoleID == 1 && item.ApprovalStatus==0)
                    {
                        <td>
                            <a asp-action="Resolve" class="btn btn-warning"  asp-controller="CandidateParticipation" asp-route-Urn="@item.Urn">Resolve</a> 
                       </td> 
                    }
        </tr>
}
    </tbody>
</table>
}

<style>

    .Button_center{
        display:flex;
        justify-content:center;
    }

  .button1 {
  background-color: tomato; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
}

  .button2 {
  background-color: green; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
}

.button3 {
  background-color: #A94064; /* dark, dusky purplish pink */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
}


.styled-table {
    border-collapse: collapse;
    margin: 25px 0;
    font-size: 0.9em;
    font-family: sans-serif;
    min-width: 400px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
}
</style>

